<h1>Create a new PortfolioSet Item</h1>


<%= form_with(model: @portfolio_item) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
   <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |trchnology_form| %>
    <li>
      <%= trchnology_form.label :name %>
      <%= trchnology_form.text_field :name %>
      
    </li>
    <% end %>
  </ul>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_area :main_image %>
  </div>
  <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_area :thumb_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', portfolio_sets_path %>
